{
  "name": "surfview",
  "version": "0.1.0",
  "description": "A secure browser that renders pages as static images",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "dependencies": {
    "puppeteer": "^24.37.5"
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  },
  "build": {
    "appId": "com.surfview.app",
    "productName": "SurfView",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "node_modules/puppeteer/.local-chromium/**/*",
      "node_modules/puppeteer-core/**/*",
      "node_modules/puppeteer/**/*"
    ],
    "win": {
      "target": ["nsis", "zip"]
	  
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
